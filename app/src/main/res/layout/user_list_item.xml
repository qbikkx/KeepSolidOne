<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_is_online"
        android:layout_alignParentStart="true"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/btn_margin"
        android:contentDescription="@string/iv_is_online" />

    <View
        android:id="@+id/v_left_divider"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_is_online"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/v_left_divider"
        android:layout_margin="@dimen/btn_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/v_right_divider"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/iv_category"
        android:background="@android:color/darker_gray"/>
    <ImageView
        android:id="@+id/iv_category"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/btn_margin"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="@string/iv_user_caterogy" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray"/>
</RelativeLayout>